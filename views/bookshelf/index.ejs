<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>All Books here!!</h1>

    <% for (let bookEntry of bookshelf){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(bookEntry.images.length) {%>
                <img class="img-fluid" alt="" src="<%=bookEntry.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/sam-a-cloud/image/upload/v1621937138/Bookshelf/unnamed_1_prfhyi.jpg">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= bookEntry.title %> </h5>
                    <p class="card-text"><%= bookEntry.writer %></p>
                    <p class="card-text"><%= bookEntry.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= bookEntry.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/bookshelf/<%=bookEntry._id%>">View <%=bookEntry.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const bookshelf = { features: <%- JSON.stringify(bookshelf) %>};
</script>

<script src="/javascripts/clusterMap.js"></script>